<Controls:MetroWindow x:Class="Clouder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clouder"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="Clouder" Height="450" Width="800">
    <Grid>
        <CheckBox Content="CheckBox" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="24" Width="136"/>
        <Button 
            Content="buttontest" Width="150" Height="50" Style="{DynamicResource MetroCircleButtonStyle}" 
            Click="ButtonTestClicked" Margin="10,50,640,334" 
            >
            <!--<Controls:PackIconModern Width="20" Height="20" Kind="Close" />-->
        </Button>
        <CheckBox Content="CheckBox" Style="{DynamicResource MahApps.Styles.Button.MetroSquare}" Height="15" Width="72"/>
        <ToggleButton Width="100"
                          Style="{DynamicResource MetroCircleToggleButtonStyle}"
                          Content="Enabled" />
    </Grid>
</Controls:MetroWindow>
