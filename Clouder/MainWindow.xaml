<Controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clouder"
        xmlns:subview="clr-namespace:Clouder.SubViews"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:icons="http://metro.mahapps.com/winfx/xaml/iconpacks" 
    x:Class="Clouder.MainWindow"
        mc:Ignorable="d"
        Title="" Height="750" Width="1200">
    <Grid>
        <TabControl Style="{DynamicResource MahApps.Styles.TabControl.Animated}" TabStripPlacement="Left">
            <TabItem Header="Identity" Height="80px">
                <subview:Identity />
            </TabItem>
            <TabItem Header="Dashboard">
                <subview:Dashboard />
            </TabItem>
            <TabItem Header="CloudAccess">
                <subview:CloudAccess />
            </TabItem>
            <TabItem Header="item 3">
                <TextBlock Text="item 3"></TextBlock>
            </TabItem>
            <TabItem Header="item 4">
                <TextBlock Text="item 4"></TextBlock>
            </TabItem>
        </TabControl>
        
    </Grid>
</Controls:MetroWindow>
